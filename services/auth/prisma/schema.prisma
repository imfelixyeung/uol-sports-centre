// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tokens    Token[]  @relation("userHasTokens")
}

model Token {
  id String @id

  token         String        @unique
  user          User          @relation("userHasTokens", fields: [userId], references: [id])
  userId        Int
  expiresAt     DateTime
  refreshTokens RefreshToken? @relation("tokenHasRefreshTokens")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RefreshToken {
  id String @id

  token     Token    @relation("tokenHasRefreshTokens", fields: [tokenId], references: [id])
  tokenId   String   @unique
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
