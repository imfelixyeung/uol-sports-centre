generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id            Int      @id @default(autoincrement())
  userId        Int
  facilityId    Int
  activityId    Int
  transactionId Int
  duration      Int
  starts        DateTime
  created       DateTime
  updated       DateTime
}

enum EventType {
  // Open use means many people can book seperately to use the facility
  OPEN_USE

  // Session means that one person books out that facility
  SESSION

  // Team event means that the facility is unavailable for use within that time
  TEAM_EVENT
}

model Event {
  id         Int       @id @default(autoincrement())
  name       String
  activityId Int
  day        Int
  time       Int
  duration   Int
  type       EventType
}
